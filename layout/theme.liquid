{% comment %} Optimized Theme Liquid for SEO, Performance, and UX {% endcomment %}

<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="description" content="{{ page_description | default: shop.meta_description }}">
  <meta name="keywords" content="{{ shop.name }}, {{ product.title | default: shop.name }}, comprar online">
  <meta name="author" content="{{ shop.name }}">
  <meta property="og:title" content="{{ page_title }}">
  <meta property="og:description" content="{{ page_description | default: shop.meta_description }}">
  <meta property="og:image" content="{{ product.featured_image | image_url: 'large' | default: shop.logo | image_url: 'large' }}">
  <meta property="og:url" content="{{ canonical_url }}">
  <meta property="og:type" content="website">
  <title>{{ page_title }} - {{ shop.name }}</title>

  <link rel="stylesheet" href="{{ 'theme.css' | asset_url }}">
  <link rel="icon" href="{{ 'favicon.ico' | asset_url }}" type="image/x-icon">
  <script defer src="{{ 'theme.js' | asset_url }}"></script>

  {% render 'structured-data' %} {# JSON-LD for SEO #}

  {{ content_for_header }}
</head>
<body>
  <header>
    {% section 'header' %}
  </header>

  <main>
    {{ content_for_layout }}
  </main>

  <footer>
    {% section 'footer' %}
  </footer>
</body>
</html>