{% comment %} Hero Section for Product Purchase {% endcomment %}

<!DOCTYPE html>
<html lang="{{ request.locale.iso_code }}">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ product.title }} - {{ shop.name }}</title>
  {{ content_for_header }}
  <style>
    .hero-section {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px 0;
      background: #f9f9f9;
    }
    .hero-content {
      max-width: 500px;
    }
    .hero-content h1 {
      font-size: 2.5rem;
      margin-bottom: 15px;
    }
    .product-options {
      margin-top: 20px;
    }
    .product-options label {
      font-weight: bold;
    }
    .product-options select, .product-options input {
      display: block;
      width: 100%;
      padding: 10px;
      margin-top: 5px;
    }
    .btn-primary {
      background: #e76f51;
      color: #fff;
      padding: 10px 20px;
      border-radius: 5px;
      font-size: 18px;
      text-decoration: none;
      display: block;
      text-align: center;
      margin-top: 15px;
    }
    .hero-image img {
      max-width: 100%;
      border-radius: 8px;
    }
  </style>
</head>
<body>
  {{ content_for_layout }}
  <section class="hero-section">
    <div class="container">
      <div class="hero-content">
        <h1>{{ product.title }}</h1>
        <p>{{ product.description | truncatewords: 20 }}</p>
        
        <form method="post" action="/cart/add">
          <input type="hidden" name="id" value="{{ product.variants.first.id }}">
          
          {% if product.variants.size > 1 %}
            <div class="product-options">
              <label for="product-variants">Selecciona tu opciÃ³n:</label>
              <select name="id" id="product-variants">
                {% for variant in product.variants %}
                  <option value="{{ variant.id }}">{{ variant.title }} - {{ variant.price | money }}</option>
                {% endfor %}
              </select>
            </div>
          {% endif %}
          
          <div class="product-options">
            <label for="product-quantity">Cantidad:</label>
            <input type="number" id="product-quantity" name="quantity" value="1" min="1">
          </div>
          
          <button type="submit" class="btn-primary">Comprar Ahora</button>
        </form>
      </div>
      <div class="hero-image">
        <img src="{{ product.featured_image | img_url: 'large' }}" alt="{{ product.title }}">
      </div>
    </div>
  </section>
</body>
</html>